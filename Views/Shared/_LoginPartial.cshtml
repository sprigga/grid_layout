@using Microsoft.AspNetCore.Identity
@using GridLayoutEditor.Data
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")" method="post" id="logoutForm" class="d-flex align-items-center ms-auto">
        <ul class="navbar-nav flex-row gap-2">
            <li class="nav-item">
                <a class="nav-link text-primary fw-bold" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                    <i class="bi bi-person-circle me-1"></i>
                    Hello, @UserManager.GetUserName(User)!
                </a>
            </li>
            <li class="nav-item">
                <button type="submit" class="btn btn-outline-secondary btn-sm ms-2">
                    <i class="bi bi-box-arrow-right me-1"></i>Logout
                </button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav flex-row gap-2 ms-auto">
        <li class="nav-item">
            <a class="btn btn-outline-primary btn-sm me-2" asp-area="Identity" asp-page="/Account/Login">
                <i class="bi bi-box-arrow-in-right me-1"></i>Login
            </a>
        </li>
        <li class="nav-item">
            <a class="btn btn-primary btn-sm" asp-area="Identity" asp-page="/Account/Register">
                <i class="bi bi-person-plus me-1"></i>Register
            </a>
        </li>
    </ul>
}

